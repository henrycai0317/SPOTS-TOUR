<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/design_bottom_sheet"
    tools:context=".VideoForMapFragment"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/design_default_color_secondary_variant"
        app:cardCornerRadius="1dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <View
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:background="@color/design_default_color_error"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country Video"
                android:textColor="@color/white"
                android:layout_gravity="center"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textStyle="bold"/>

              <VideoView
                  android:layout_width="match_parent"
                  android:layout_height="230dp"
                  android:layout_marginTop="20dp"
                  android:id="@+id/videoview_forMap"
                  android:backgroundTint="@color/black"/>

            <TextView
                android:id="@+id/descride"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="374dp"
                android:layout_height="386dp"
                android:layout_marginTop="10dp"
                android:text="Video Descride simple share "
                android:textColor="@color/white" />


        </LinearLayout>



    </androidx.cardview.widget.CardView>



</LinearLayout>